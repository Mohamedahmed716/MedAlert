#####photo 4
%%{init: {'theme':'base'}}%%
graph TB
    Doctor((Doctor))
    Patient((Patient))
    HospitalAdmin((Hospital Admin))
    
    subgraph System["MedAlert - Doctor Module"]
        ViewDashboard([View Dashboard])
        ManageReservations([Manage Patient Reservations])
        ViewReservationHistory([View Reservation History])
        ViewTodaySchedule([View Today's Schedule])
        ConfirmAppointment([Confirm Appointment])
        CancelAppointment([Cancel Appointment])
        ManagePrescriptions([Manage Prescriptions])
        CreatePrescription([Create Prescription])
        EditPrescription([Edit Prescription])
        ViewPatientPrescriptions([View Patient Prescriptions])
        SendPrescription([Send Prescription to Patient])
        ReceiveNotifications([Receive Emergency Notifications])
        ViewNotification([View Notification Details])
        RespondToEmergency([Respond to Emergency])
        ManageProfile([Manage Profile])
        ViewPatients([View My Patients])
        
        ManageReservations -.->|include| ViewReservationHistory
        ManageReservations -.->|include| ViewTodaySchedule
        ConfirmAppointment -->|extends| ManageReservations
        CancelAppointment -->|extends| ManageReservations
        CreatePrescription -->|extends| ManagePrescriptions
        EditPrescription -->|extends| ManagePrescriptions
        ManagePrescriptions -.->|include| ViewPatientPrescriptions
        CreatePrescription -.->|include| SendPrescription
        ReceiveNotifications -.->|include| ViewNotification
        RespondToEmergency -->|extends| ReceiveNotifications
    end
    
    Doctor --> ViewDashboard
    Doctor --> ManageReservations
    Doctor --> ManagePrescriptions
    Doctor --> ReceiveNotifications
    Doctor --> ManageProfile
    Doctor --> ViewPatients
    
    SendPrescription -.->|sends to| Patient
    HospitalAdmin -.->|triggers| ReceiveNotifications




