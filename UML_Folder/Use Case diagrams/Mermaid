##third Photo

%%{init: {'theme':'base'}}%%
graph TB
    HospitalAdmin((Hospital Admin))
    Doctor((Doctor))
    
    subgraph System["MedAlert - Hospital Admin Module"]
        ViewDashboard([View Dashboard])
        ManageDepartments([Manage Departments])
        AddDepartment([Add Department])
        RemoveDepartment([Remove Department])
        ManageDoctors([Manage Doctors])
        AddDoctor([Add Doctor])
        RemoveDoctor([Remove Doctor])
        ManageEmergency([Manage Emergency System])
        UpdateEmergencyStatus([Update Emergency Status])
        ManageRooms([Manage Room Status])
        UpdateRoomAvailability([Update Room Availability])
        SendNotifications([Send Notifications to Doctors])
        SelectDoctor([Select Doctor])
        ComposeMessage([Compose Message])
        ManageProfile([Manage Profile])
        
        AddDepartment -->|extends| ManageDepartments
        RemoveDepartment -->|extends| ManageDepartments
        AddDoctor -->|extends| ManageDoctors
        RemoveDoctor -->|extends| ManageDoctors
        ManageEmergency -.->|include| UpdateEmergencyStatus
        ManageRooms -.->|include| UpdateRoomAvailability
        SendNotifications -.->|include| SelectDoctor
        SendNotifications -.->|include| ComposeMessage
    end
    
    HospitalAdmin --> ViewDashboard
    HospitalAdmin --> ManageDepartments
    HospitalAdmin --> ManageDoctors
    HospitalAdmin --> ManageEmergency
    HospitalAdmin --> ManageRooms
    HospitalAdmin --> SendNotifications
    HospitalAdmin --> ManageProfile
    
    SendNotifications -.->|notifies| Doctor



