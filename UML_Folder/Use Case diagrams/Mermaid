####photo 5 









%%{init: {'theme':'base'}}%%
graph TB
    Patient((Patient))
    Guest((Guest User))
    Doctor((Doctor))
    
    subgraph System["MedAlert - Patient Module"]
        ViewDashboard([View Dashboard])
        ViewNearbyHospitals([View Nearby Hospitals])
        SearchHospitals([Search Hospitals])
        ViewHospitalDetails([View Hospital Details])
        ViewMap([View Map with Locations])
        EmergencyServices([Access Emergency Services])
        RequestEmergency([Request Emergency Room])
        SelectHospital([Select Hospital])
        ConfirmEmergency([Confirm Emergency Request])
        TrackEmergencyStatus([Track Emergency Status])
        MakeAppointment([Make Appointment with Doctor])
        SelectDoctor([Select Doctor])
        SelectDateTime([Select Date & Time])
        ConfirmAppointment([Confirm Appointment])
        ViewReservations([View My Reservations])
        CancelReservation([Cancel Reservation])
        ViewPrescriptions([View My Prescriptions])
        DownloadPrescription([Download Prescription])
        ManageProfile([Manage My Profile])
        ViewPersonalDetails([View Personal Details])
        EditDetails([Edit Name/Phone])
        
        ViewNearbyHospitals -.->|include| SearchHospitals
        ViewNearbyHospitals -.->|include| ViewMap
        ViewHospitalDetails -->|extends| ViewNearbyHospitals
        EmergencyServices -.->|include| RequestEmergency
        RequestEmergency -.->|include| SelectHospital
        RequestEmergency -.->|include| ConfirmEmergency
        TrackEmergencyStatus -->|extends| EmergencyServices
        MakeAppointment -.->|include| SelectDoctor
        MakeAppointment -.->|include| SelectDateTime
        MakeAppointment -.->|include| ConfirmAppointment
        CancelReservation -->|extends| ViewReservations
        DownloadPrescription -->|extends| ViewPrescriptions
        ManageProfile -.->|include| ViewPersonalDetails
        EditDetails -->|extends| ManageProfile
    end
    
    Patient --> ViewDashboard
    Patient --> ViewNearbyHospitals
    Patient --> EmergencyServices
    Patient --> MakeAppointment
    Patient --> ViewReservations
    Patient --> ViewPrescriptions
    Patient --> ManageProfile
    
    Guest --> ViewNearbyHospitals
    Guest --> EmergencyServices
    
    ConfirmAppointment -.->|notifies| Doctor
